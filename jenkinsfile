pipeline {
    agent any
    stages {
        stage('Git Clone') {
            steps {
                git credentialsId: 'xebia_github', url: 'https://github.com/axebia/simple-grable-build.git'
            }
        }
        stage('Gradle Build') {
            steps {
                sh label: '', script: 'gradle buildDocker'
            }
        }
        stage('Deploy Helm Chart') {
        
            steps {
            withCredentials([kubeconfigContent(credentialsId: 'kube', variable: 'KUBECONFIG_CONTENT')]) {
    sh label: '', script: 'kubectl cluster-info'
}
           }
        }
        
    }
}
